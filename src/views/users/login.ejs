<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head', {title: 'Login'}) %>

<body>
    <!-- header -->
    <header class="header-error">
        <nav class="nav-error">       
            <a href="/" class="nav-error-logo">
                <img src="/images/Rue_logo_white_resized.png" alt="">
            </a>
        </nav>
    </header>
    <!-- fin header -->

    <!-- main home -->
    <main class="main-register">
        <section class="main-register-section-form">

            <section class="main-article-login">
                <div class=div-cont-login> <img src="/images/img-chilaquiles.jpg"></div>
                <div class="div-img-login">
                    <article>
                        <p>Chilaquiles</p>
                    </article>
                </div>
            </section>
        </section>
        <section class="main-register-section-buttons">
            <h1>Inicia sesión</h1>
            <div class="div-text-cuenta">
                <p class="text-inicio-cuenta">
                        ¿Aún no tienes cuenta? <a href="/user/signup">Registrate aquí</a>
                </p>
            </div>
            <div class="buttons-group-auth">
                <div class="button-auth">
                    <button class="btn-auth btn-auth-facebook">
                    <i class="fab fa-facebook"></i>
                    Facebook
                </button>
                </div>
                <div class="button-auth">
                    <button class="btn-auth btn-auth-google">
                    <i class="fab fa-google"></i>
                    Google
                </button>
                </div>
                <div class="button-auth">
                    <button class="btn-auth btn-auth-apple">
                    <i class="fab fa-apple"></i>
                    Apple
                </button>
                </div>

                <form action="/user/enter" method="POST">
                    <div class="form-register-item">
                        <input type="email" class="input" name="email" id="email" placeholder="Correo"
                        value="<%= locals.old && old.email %>">
                        <% if(locals.errors && errors.email){ %>
                            <small id="email_ejs_error" class="alert-errors"><%= errors.email.msg %></small>
                        <%}%>
                        <small class="alert-errors" id="email-err"></small>
                            
                    </div>
                    <div class="form-register-item">
                        <input type="password" class="input" name="password" id="password" placeholder="Escribe tu Contraseña">
                        <% if(locals.errors && errors.password){ %>
                            <small id="pass_ejs_error" class="alert-errors"><%= errors.password.msg %></small>
                        <%}%>
                        <small class="alert-errors" id="pass-err"></small>
                            
                    </div>

                    <div class="form-register-item">
                        <input type="checkbox" name="recordar" id="recordar" value="acepto">
                        <label class="text-label" for="">Recordar el inicio de sesión</label>
                    </div>
                    <div class="form-register-item div-btns">
                        <button type="submit" class="btn-register">Ingresar</button>
                    </div>    
                </form>
            </div>
        </section>
    </main>
    <!-- fin main home -->


    <!-- footer -->
    <%- include('../partials/footer') %>
    <!-- fin footer -->
    <script type="text/javascript" src="/js/validator.min.js"></script>
    <script src="/js/validator-login.js"></script>
</body>

</html>