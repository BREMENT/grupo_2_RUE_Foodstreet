<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalle del restaurante</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/product-create-form.css">
</head>
<body>
    <!-- header -->
      <%- include('./partials/header') %> 
    <!-- fin header -->
    
    <nav class="main-navbar">
       
            <div class="main-header-top-bar"> 
                <p class="return"> << Volver </p>
            </div>
        </section>
    </nav>
        
            <!-- main home -->
    <main class="main-register">
        <section class="main-register-section-form">
                <h2 class="products-title">Formulario de creación de productos</h2>	
		<div class="col-12">
			<form action="/products/create" method="POST" enctype="multipart/form-data">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del platillo:</label>
						<input type="text" id="name" name="name" placeholder="Ej: Tacos al pastor" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price" placeholder="Ej: 5178" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input type="text" id="discount" name="discount" placeholder="Ej: 15" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">
							<option value="">Elige una opción</option>
							<option value="in-sale">En oferta</option>
							<option value="visited">Últimos agregados</option>
						</select>
					</div>
                    <div class="col-12 col-md-6">
						<label for="category" class="form-label">Tipo de comida:</label>
						<select name="category" id="category" class="form-input">
							<option value="">Elige una opción</option>
							<option value="Mexican">Mexicana</option>
							<option value="Chinese">China</option>
                            <option value="Japanese">Japonesa</option>
                            <option value="French">Francesa</option>
                            <option value="Italian">Italiana</option>
                            <option value="Veggie">vegetariana</option>
                            
						</select>
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description" class="form-input"></textarea>
					</div>
					<div class="col-12">
						<input type="file" name="productImage" id="product-image">
					</div>

					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

        </section>
    </section>   
      

    </main>
    <!-- fin main home -->

 <!-- fin bontones -->



    <!-- footer -->
    <%- include('./partials/footer') %> 
    <!-- fin footer -->
</body>

</html>



 