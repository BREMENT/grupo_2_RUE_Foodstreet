            <!-- main home -->
    <main class="main-register">
        <section class="main-register-section-form">
        	<h3>Formulario de creación de productos</h3>	
			<div class="form-register">
				<form action="/productos/crear" method="POST" enctype="multipart/form-data">
					<div class="row product-detail">
						<div class="form-register-item">
							<label for="name" class="form-label">Nombre del platillo:</label>
							<input type="text" id="name" name="name" placeholder="Ej: Tacos al pastor" class="form-input">
						</div>
						<div class="form-register-item">
							<label for="price" class="form-label">Precio del producto:</label>
							<input type="text" id="price" name="price" placeholder="Ej: 5178" class="form-input">
						</div>
						<div class="form-register-item">
							<label for="discount" class="form-label">Descuento:</label>
							<input type="text" id="discount" name="discount" placeholder="Ej: 15" class="form-input">
						</div>
						<div class="form-register-item">
							<label for="category" class="form-label">Categoría:</label>
							<select name="category" id="category" class="select-option">
								<option value="">Elige una opción</option>
								<option value="in-sale">En oferta</option>
								<option value="visited">Últimos agregados</option>
							</select>
						</div>
						<div class="form-register-item">
							<label for="category" class="form-label">Tipo de comida:</label>
							<select name="category" id="category" class="select-option">
								<option value="">Elige una opción</option>
								<option value="Mexican">Mexicana</option>
								<option value="Chinese">China</option>
								<option value="Japanese">Japonesa</option>
								<option value="French">Francesa</option>
								<option value="Italian">Italiana</option>
								<option value="Veggie">vegetariana</option>
								
							</select>
						</div>
						<div class="form-register-item">
							<label for="description" class="form-label">Descipción:</label>
							<textarea name="description" id="description"></textarea>
						</div>
						<div class="input-file">
							<input type="file" name="productImage" id="product-image">
						</div>

						<div class="form-register-item div-btns">
							<button type="submit" class="btn-register">Guardar producto</button>
						</div>
					</div>
				</form>
			</div>

    	</section>   
